<%= simple_form_for(@pet) do |f| %>

  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :specie, collection: [ "Dog", "Cat", "Bird","Reptile","Dragon","Unicorn"] %>
  <%= f.input :breed %>
  <%= f.input :description %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.button :submit, "Con-FUR-m" %>
<% end %>
