<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
     <% if policy(@user).update?  %>
      <%= simple_form_for (@user) do |f| %>
        <%= f.input :name %>
        <%= f.input :last_name %>
        <%= f.input :phone_number %>
        <%= f.input :address %>
        <%= f.input :avatar %>
        <%= f.input :avatar_cache, as: :hidden %>
        <%= f.input :admin if current_user.admin %>
        <%= f.button :submit %>
      <% end %>
      <% else %>
      you ain't this profile
    <% end %>
    </div>
  </div>
</div>


